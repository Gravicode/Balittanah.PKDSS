<Page
    x:Class="PKDSS.PortableApp.SensorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PKDSS.PortableApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Orientation="Horizontal" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Padding="10,10,10,10">
            <TextBlock FontWeight="Bold" FontSize="20" Text="Light: " />
            <TextBlock FontWeight="Bold" FontSize="20" Text="Temp: " />
            <TextBlock FontWeight="Bold" FontSize="20" Text="Accel: " />
            <TextBlock FontWeight="Bold" FontSize="20" Text="Button 18: " />
            <TextBlock FontWeight="Bold" FontSize="20" Text="Button 22: " />
            <TextBlock FontWeight="Bold" FontSize="20" Text="Leds: " />
            <TextBlock FontWeight="Bold" FontSize="20" Text="Analog: " />
        </StackPanel>
        <StackPanel>
            <TextBlock x:ConnectionId='1' FontSize="20" Name="LightTextBox" />
            <TextBlock x:ConnectionId='2' FontSize="20" Name="TempTextBox" />
            <TextBlock x:ConnectionId='3' FontSize="20" Name="AccelTextBox" />
            <TextBlock x:ConnectionId='4' FontSize="20" Name="Button18TextBox" />
            <TextBlock x:ConnectionId='5' FontSize="20" Name="Button22TextBox" />
            <TextBlock x:ConnectionId='6' FontSize="20" Name="LedsTextBox" />
            <TextBlock x:ConnectionId='7' FontSize="20" Name="AnalogTextBox" />
            <Button x:ConnectionId='8' Margin="0,10,0,0" HorizontalAlignment="Center" Content="Kembali"   Width="200" FontSize="30" Name="BtnBack"></Button>

        </StackPanel>
    </StackPanel>
</Page>

